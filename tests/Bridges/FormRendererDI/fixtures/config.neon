extensions:
    formRenderer: Nepada\Bridges\FormRendererDI\FormRendererExtension

formRenderer:
    default:
        imports:
            - %fixturesDir%/form.latte
    bootstrap3:
        mode: horizontal
        renderValidState: false
        imports:
            - %fixturesDir%/form.latte
    bootstrap4:
        mode: horizontal
        useCustomControls: false
        useErrorTooltips: false
        renderValidState: false
        imports:
            - %fixturesDir%/form.latte

application:
    scanDirs: false

di:
    debugger: false
