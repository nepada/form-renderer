{
    "name": "nepada/form-renderer",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Latte template based form renderer for Nette forms with full support for Bootstrap 3 & 4.",
    "keywords": ["forms", "renderer", "bootstrap", "nette", "latte"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/form-renderer/issues"
    },
    "authors": [
        {
            "name": "Petr MorÃ¡vek",
            "email": "petr@pada.cz"
        }
    ],
    "require": {
        "php": ">=7.4.0 <8.2",
        "nette/utils": "^3.2@dev",
        "nette/forms": "^3.1@dev",
        "nette/application": "^3.1.4@dev",
        "latte/latte": "^2.9@dev || ^3.0@dev"
    },
    "require-dev": {
        "nette/tester": "2.4.3",
        "mockery/mockery": "1.5.0",
        "phpstan/phpstan": "1.8.2",
        "phpstan/phpstan-strict-rules": "1.3.0",
        "phpstan/phpstan-nette": "1.0.0",
        "nepada/phpstan-nette-tester": "0.4.0",
        "spaze/phpstan-disallowed-calls": "2.5.0",
        "shipmonk/phpstan-rules": "1.0.1",
        "phpstan/phpstan-mockery": "1.1.0",
        "php-parallel-lint/php-parallel-lint": "1.3.2",
        "nepada/coding-standard": "7.5.2",
        "nette/di": "^3.0.6@dev",
        "nette/schema": "^1.0.3@dev",
        "nette/bootstrap": ">=3.0@dev",
        "nette/component-model": ">=3.0.2",
        "composer-runtime-api": "^2.0",
        "composer/semver": "3.3.2"
    },
    "suggest": {
        "nette/di": "for integration with Nette DI container"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\Bridges\\": "src/Bridges/",
            "Nepada\\FormRenderer\\": "src/FormRenderer/"
        },
        "files": ["src/compatibility.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "NepadaTests\\": "tests/"
        }
    },
    "config": {
        "platform-check": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.10-dev"
        }
    }
}
